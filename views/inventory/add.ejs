<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-item-center pt-3 pb-2 border-bottom"
>
  <h1 class="h2">Add New Inventory</h1>

  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2"></div>
    <button href="/" class="btn btn-sm btn-outline-secondary">?</button>
  </div>
</div>
<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">New Inventory</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>UserId</b>
    </div>
  </div>
</div>
<form action="/add" method="POST">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="category">Category</label>
      <input
        type="text"
        class="form-control"
        id="category"
        name="category"
        value=""
        placeholder="category"
        required
      />
    </div>

    <div class="col">
      <label for="name">Item Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value=""
        placeholder="Item Name"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="size">Size</label>
      <input
        type="text"
        class="form-control"
        id="size"
        name="size"
        value=""
        placeholder="Size"
        required
      />
    </div>
  </div>
  <div class="form-group mb-4">
    <label for="details">Items Details</label>
    <textarea
      class="form-control"
      name="details"
      id="details"
      cols="30"
      rows="9"
      placeholder="Item Details"
    ></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add item</button>
  </div>
</form>
